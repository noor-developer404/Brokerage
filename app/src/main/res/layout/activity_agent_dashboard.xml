                            android:src="@drawable/baseline_search_24" />

                        <TextView
                            android:id="@+id/searchText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Search"
                            android:textAlignment="center"
                            android:textColor="@color/gray_light" />
                    </LinearLayout>


