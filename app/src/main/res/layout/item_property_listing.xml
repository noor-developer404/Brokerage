<?xml version="1.0" encoding="utf-8"?>

<!--Acts as template for property_listing-->


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/property_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/house"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/gold_background"
            android:layout_marginTop="170dp"/>

        <TextView
            android:id="@+id/goldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting AED 1,300,000"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="170dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/property_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goldText"
            android:layout_marginStart="15dp"
            android:text="Meraas Le Pont Villas"
            android:layout_marginTop="15dp"
            android:textSize="16sp" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_on_24"
            android:layout_marginTop="5dp"
            android:layout_below="@id/property_title"/>

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_title"
            android:layout_marginStart="24dp"
            android:text="Port De La Mer in Jumeirah, Dubai"
           android:layout_marginTop="7dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_bedroom_parent_24"
            android:layout_marginTop="5dp"
            android:layout_below="@id/loc"/>

        <TextView
            android:id="@+id/rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loc"
            android:layout_marginStart="24dp"
            android:text="1-2-3-4"
            android:layout_marginTop="7dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/area"
            android:layout_marginTop="-9dp"
            android:layout_marginStart="90dp"
            android:layout_below="@id/loc"/>

        <TextView
            android:id="@+id/sqft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loc"
            android:layout_marginStart="113dp"
            android:text="745.19 to 3,657.ftÂ²"
            android:layout_marginTop="7dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bid_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="245dp"

            android:text="Bid" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>