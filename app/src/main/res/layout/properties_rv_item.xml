<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_corners_nav"
        android:elevation="2dp"
        android:id="@+id/property1"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/PropItemImg"
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="-5dp"
                android:src="@drawable/propertyimg1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/like1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/heartred"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewn1"
                app:layout_constraintEnd_toEndOf="@+id/cardView1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.09" />

            <TextView
                android:id="@+id/textViewl1"
                android:layout_width="248dp"
                android:layout_height="23dp"
                android:background="@drawable/gold_background"
                android:gravity="center"
                android:text="Residential Plot"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_marginTop="117dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewn1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/PropItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Saadiyat Reserve"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/locl1"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/PropItemLocation"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:text="Abu Dhabi"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/areaIconl1"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:src="@drawable/area" />

            <TextView
                android:id="@+id/areaTextl1"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:text="600 to 1400 SQM"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>