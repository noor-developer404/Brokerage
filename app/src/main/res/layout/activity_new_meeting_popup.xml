<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corners_nav">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Meeting"
        android:textSize="24dp"
        android:textColor="@color/color12"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginStart="135dp"/>

    <!-- Horizontal line -->
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color16"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Title"
        android:textSize="18dp"
        android:textColor="@color/color17"
        android:textStyle="bold"
        android:layout_marginTop="83dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Talk"
        android:textSize="24dp"
        android:textColor="@color/color6"
        android:layout_marginTop="123dp"
        android:layout_marginStart="50dp"/>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/color16"
        android:layout_marginTop="170dp"
        android:layout_marginStart="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Link"
        android:textSize="18dp"
        android:textColor="@color/color17"
        android:textStyle="bold"
        android:layout_marginTop="190dp"
        android:layout_marginStart="50dp"/>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/color16"
        android:layout_marginTop="290dp"
        android:layout_marginStart="45dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18dp"
        android:textColor="@color/color17"
        android:textStyle="bold"
        android:layout_marginTop="320dp"
        android:layout_marginStart="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="160dp"
        android:background="@color/white"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="01/02/2024"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/dateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/baseline_calendar_month_24"/>



    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start time"
        android:textSize="18dp"
        android:textColor="@color/color17"
        android:textStyle="bold"
        android:layout_marginTop="370dp"
        android:layout_marginStart="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginTop="375dp"
        android:layout_marginStart="160dp"
        app:cardElevation="15dp">


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="select time"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/btnTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/baseline_arrow_drop_down_24"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End time"
        android:textSize="18dp"
        android:textColor="@color/color17"
        android:textStyle="bold"
        android:layout_marginTop="420dp"
        android:layout_marginStart="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="160dp"
        app:cardElevation="15dp">


        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="select time"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/btnEndTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/baseline_arrow_drop_down_24"/>


    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/rounded_corners"
        android:text="Done"
        android:textSize="20dp"/>





</RelativeLayout>