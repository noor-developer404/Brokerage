<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.meeting_schedule.meeting_schedule"
    android:isScrollContainer="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="19dp"
            android:backgroundTint="@color/color13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"/>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meetings"
            android:textSize="25dp"
            android:textColor="@color/color6"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"/>
        <!-- Horizontal line -->
        <View
            android:id="@+id/line1"
            android:layout_width="284dp"
            android:layout_height="1dp"
            android:background="@color/color10"
            android:layout_marginTop="109dp"
            android:layout_marginStart="52dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_marginTop="75dp"
            android:layout_marginStart="20dp"
            app:cardElevation="15dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                />

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="420dp"
            android:layout_height="370dp"
            android:layout_marginTop="390dp"
           android:backgroundTint="@color/color18">

           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No meetings or Events on this date"
                android:layout_marginTop="15dp"
                android:layout_marginStart="120dp"
                android:textSize="16dp"
                android:textColor="@color/color12"/> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:layout_marginTop="65dp"
                android:layout_marginStart="50dp"
                android:textSize="18dp"
                android:textColor="@color/color12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:layout_marginTop="90dp"
                android:layout_marginStart="55dp"
                android:textSize="18dp"
                android:textColor="@color/color12"/>

            <androidx.cardview.widget.CardView
                android:layout_width="255dp"
                android:layout_height="265dp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 AM - 11:15 AM"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bob"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 minute meeting (clone)"
                    android:textSize="15dp"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="69dp"/>


                <View
                    android:layout_width="252dp"
                    android:layout_height="2dp"
                    android:background="@color/color16"
                    android:layout_marginTop="105dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:00 PM - 2:30 PM"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="120dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Mobbin"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="142dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 minute meeting (clone)"
                    android:textSize="15dp"
                    android:textColor="@color/color12"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="175dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescheduled by John Mobbin"
                    android:textSize="15dp"
                    android:textColor="@color/color20"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="206dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="235dp"
                    android:text="No Reason"
                    android:textColor="@color/color19"
                    android:textSize="15dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/meetView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:layout_marginStart="160dp"
                android:textSize="18dp"
                android:textColor="@color/color19"
              android:layout_marginTop="340dp"/>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="790dp">

            <Button
                android:id="@+id/scheduleEventButton"
                android:layout_width="347dp"
                android:layout_height="55dp"
                android:layout_marginStart="35dp"
                android:text="Schedule Event"
                android:textSize="25dp"
                android:background="@drawable/rounded_corners"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:layout_marginStart="59dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>