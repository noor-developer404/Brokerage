<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".ui.bid.BidActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="500dp"
            android:layout_height="280dp"
            android:layout_marginTop="-79dp"
            android:src="@drawable/house1" />

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="19dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/baseline_arrow_back_24" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="17dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/baseline_share_24" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="17dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/like" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/baseline_star_24">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="180dp"
            android:text="4.9"
            android:textSize="20dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="170dp"
            android:backgroundTint="@color/color8"
            app:cardCornerRadius="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="Apartment"
                android:textColor="@color/white"
                android:textSize="20dp">

            </TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/woodApart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="243dp"
            android:text="Woodland Apartment"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/woodApart"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_location_on_24">

        </ImageView>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/woodApart"
            android:layout_marginStart="34dp"
            android:text="1012 Ocean avenue, New york, USA"
            android:textSize="16dp">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="328dp"
            android:src="@drawable/baseline_fit_screen_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="328dp"
            android:text="1,225" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginTop="328dp"
            android:src="@drawable/baseline_bedroom_parent_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="328dp"
            android:text="3.0" />

        <androidx.cardview.widget.CardView
            android:layout_width="344dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="375dp"
            android:backgroundTint="@color/color11"
            app:cardCornerRadius="10dp">

            <!-- Vertical Line -->

            <View
                android:layout_width="1dp"
                android:layout_height="93dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="156dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:text="Starting Price"
                android:textColor="@color/color12"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="48dp"
                android:text="5,000 AED"
                android:textColor="@color/color12"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="178dp"
                android:layout_marginTop="10dp"
                android:text="Current Bid Price"
                android:textColor="@color/color12"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="48dp"
                android:text="24,500 AED"
                android:textColor="@color/color12"
                android:textSize="22dp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="520dp"
            android:text="Time remaining"
            android:textSize="25dp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="575dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="123"
                android:textColor="@color/color1"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="40dp"
                android:text="Days"
                android:textColor="@color/bg"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="575dp"
            android:src="@drawable/corner2"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="123"
                android:textColor="@color/color1"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                android:text="Hours"
                android:textColor="@color/bg"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="234dp"
            android:layout_marginTop="575dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="123"
                android:textColor="@color/color1"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:text="Minutes"
                android:textColor="@color/bg"
                android:textSize="18dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="700dp"
            android:text="Please enter your bid amount"
            android:textSize="23dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="750dp"
            app:cardCornerRadius="7dp">

            <TextView
                android:id="@+id/bid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="17dp"
                android:text="27k AED" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="750dp"
            app:cardCornerRadius="7dp">

            <TextView
                android:id="@+id/bid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="17dp"
                android:text="28k AED" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="194dp"
            android:layout_marginTop="750dp"
            app:cardCornerRadius="7dp">

            <TextView
                android:id="@+id/bid3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="17dp"
                android:text="32k AED" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="750dp"
            app:cardCornerRadius="7dp">

            <TextView
                android:id="@+id/bid4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="17dp"
                android:text="35k AED" />


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/decrementButton"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="840dp"
            android:backgroundTint="@color/color1"
            android:onClick="decrement"
            android:text="-"
            android:textSize="20dp"
            app:cardCornerRadius="120dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="840dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/valueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:text="45,000 AED"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/incrementButton"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginStart="283dp"
            android:layout_marginTop="840dp"
            android:backgroundTint="@color/color1"
            android:onClick="increment"
            android:text="+"
            android:textSize="20dp"
            app:cardCornerRadius="120dp" />

        <Button
            android:id="@+id/bid_submit_btn"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="925dp"
            android:text="Submit Your Bid"
            android:textSize="15dp" />

        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="990dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
